<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ChoiceBox?>
<GridPane alignment="TOP_CENTER" gridLinesVisible="false"
          hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/8" fx:controller="Controller">

    <padding>
        <Insets left="15" right="15" top="15" bottom="15">
        </Insets>
    </padding>

    <TextArea GridPane.rowIndex="0"
              GridPane.columnIndex="0"
              GridPane.columnSpan="2"
              GridPane.rowSpan="1"></TextArea>

    <Text text="Select Password Length"
          GridPane.rowIndex="2"
          GridPane.columnIndex="0"
          GridPane.columnSpan="2"></Text>

    <VBox GridPane.rowIndex="3" GridPane.columnIndex="0" spacing="5" alignment="CENTER">
        <RadioButton text="Number of characters"></RadioButton>
        <ChoiceBox
            fx:id="charLengthChoiceBox"
            ></ChoiceBox>
    </VBox>


    <VBox GridPane.rowIndex="3" GridPane.columnIndex="1" spacing="5" alignment="CENTER">
        <RadioButton text="Need more characters? Type the amount"></RadioButton>
        <TextField ></TextField>
    </VBox>


    <Text text="Choose Password Content"
          GridPane.rowIndex="4"
          GridPane.columnIndex="0"></Text>
    <CheckBox text="Use Lowercase Letters"
              fx:id="lowercaseCheckBox"
              GridPane.rowIndex="5"
              GridPane.columnIndex="0" ></CheckBox>
    <CheckBox text="Use Special Characters"
              fx:id="specialCheckBox"
              GridPane.rowIndex="6"
              GridPane.columnIndex="0" ></CheckBox>
    <CheckBox text="Use Uppercase Letters"
              fx:id="uppercaseCheckBox"
              GridPane.rowIndex="5"
              GridPane.columnIndex="1" ></CheckBox>
    <CheckBox text="Use Numbers"
              fx:id="numberCheckBox"
              GridPane.rowIndex="6"
              GridPane.columnIndex="1"></CheckBox>

    <Button text="Make Password"
            fx:id="makePasswordButton"
            GridPane.rowIndex="8"
            GridPane.columnIndex="0"
            onAction="#handleMakePassword"></Button>

    <Button text="Save Password to Computer"
            GridPane.rowIndex="8"
            GridPane.columnIndex="1"
            fx:id="savePasswordButton"
            onAction="#handleSavePassword"></Button>

    <Label text="Errors" GridPane.rowIndex="9"
           GridPane.columnIndex="0"
           GridPane.columnSpan="1"></Label>





</GridPane>
